<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_image" />

    <Button
        android:id="@+id/date_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@color/white"
        tools:hint="30 мар, ср"
        android:textAlignment="viewStart"
        android:visibility="invisible"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/button_find_bus"
        app:layout_constraintEnd_toEndOf="@+id/button_find_bus"
        app:layout_constraintStart_toStartOf="@+id/button_find_bus" />

    <Button
        android:id="@+id/button_city_in"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/white"
        android:completionThreshold="1"
        tools:hint="Москва"
        android:textAlignment="viewStart"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/date_button"
        app:layout_constraintEnd_toEndOf="@+id/date_button"
        app:layout_constraintStart_toStartOf="@+id/date_button" />

    <Button
        android:id="@+id/button_city_out"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/white"
        android:completionThreshold="1"
        tools:hint="Дубна"
        android:textAlignment="viewStart"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/button_city_in"
        app:layout_constraintEnd_toEndOf="@+id/button_city_in"
        app:layout_constraintStart_toStartOf="@+id/button_city_in" />

    <Button
        android:id="@+id/button_find_bus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/button"
        android:text="Найти билеты"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>